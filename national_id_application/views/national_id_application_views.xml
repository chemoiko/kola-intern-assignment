<odoo>
    <record id="view_national_id_form" model="ir.ui.view">
        <field name="name">national.id.application.form</field>
        <field name="model">national.id.application</field>
        <field name="arch" type="xml">
            <form string="National ID Application">
                <header>
                    <button name="action_verify" string="Verify" type="object"
                        class="oe_highlight"
                        groups="national_id_application.group_verification_user"
                        invisible="state != 'draft'" />
                    <button name="action_senior_approve" string="Senior Approve" type="object"
                        class="oe_highlight"
                        groups="national_id_application.group_senior_user"
                        invisible="state != 'verified'" />
                    <button name="action_final_approve" string="Final Approve" type="object"
                        class="oe_highlight"
                        groups="national_id_application.group_final_user"
                        invisible="state != 'senior_approved'" />


                    <!-- Reject at Verification -->
                    <button name="action_reject" string="Reject" type="object"
                        class="btn-secondary"
                        groups="national_id_application.group_verification_user"
                        invisible="state != 'verified'" />

                    <!-- Reject at Senior -->
                    <button name="action_reject" string="Reject" type="object"
                        class="btn-secondary"
                        groups="national_id_application.group_senior_user"
                        invisible="state != 'senior_approved'" />

                    <!-- Reject at Final -->
                    <button name="action_reject" string="Reject" type="object"
                        class="btn-secondary"
                        groups="national_id_application.group_final_user"
                        invisible="state != 'final_approved'" />


                    <field name="state"
                        widget="statusbar"
                        statusbar_visible="draft,verified,senior_approved,final_approved,rejected" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Stage indicators via statusbar field below -->
                    </div>
                    <field name="photo" widget="image" class="oe_avatar" nolabel="1"
                        options="{'zoom': true}" />

                    <div class="oe_title">
                        <span class="o_form_label">National ID Application </span>

                    </div>
                    <h1>
                        <field
                            name="tracking_number"
                            class="oe_inline"
                        />
                    </h1>
                    <group>
                        <group>
                            <field name="name" readonly="id" />
                            <field name="dob" readonly="id" />
                            <field name="gender" readonly="id" />
                            <field name="address" readonly="id" />
                            <field name="phone" readonly="id" />
                            <field name="application_date" readonly="1" />
                            <field name="email" readonly="id" />
                            <field name="marital_status" readonly="id" />
                        </group>
                        <group>
                            <field name="next_of_kin" readonly="id" />
                            <field name="next_of_kin_phone" readonly="id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Verification">

                            <group string="Documents">
                                <button name="action_view_photo" string="View Support Photo"
                                    type="object"
                                    class="btn-secondary"
                                />

                                <button name="action_view_lc_letter" string="View Letter of Consent"
                                    type="object"
                                    class="btn-secondary"
                                />
                                <field name="photo_quality" string="Support Photo Quality" />
                                <field name="lc_present" />
                                <field name="lc_valid" />
                                <field name="photo_quality" string="LC Letter Quality" />
                            </group>

                            <group string="Identity Checks">
                                <field name="name_match" />
                                <field name="address_match" />
                            </group>
                        </page>
                        <page string="Documents">
                            <group colspan="4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <field name="photo" widget="image"
                                            options="{'zoom': true, 'preview_image': 'photo', 'size': [400, 400]}"
                                            nolabel="1" string="Support Photo" />
                                    </div>
                                    <div class="col-md-6">
                                        <field name="lc_letter" widget="binary"
                                            options="{'accepted_file_extensions': '.pdf,.jpg,.jpeg,.png'}"
                                            nolabel="1" string="LC Letter" />
                                        <br />
                                        <button name="action_view_lc_letter"
                                            string="View Full Document"
                                            type="object" class="btn btn-primary btn-sm"
                                            invisible="not lc_letter" />
                                    </div>
                                </div>
                            </group>


                        </page>

                        <page string="Notes">
                            <group>
                                <field name="verification_notes" colspan="2" string="Verifier Notes"
                                    invisible="state not in ['draft', 'verified', 'senior_approved', 'final_approved']"
                                    required="state == 'draft'" />
                                <field name="senior_approver_notes" colspan="2"
                                    invisible="state not in ['verified', 'senior_approved', 'final_approved']"
                                    required="state == 'verified'" />
                                <field name="final_approver_notes" colspan="2"
                                    invisible="state not in ['senior_approved', 'final_approved']"
                                    required="state == 'senior_approved'" />

                            </group>

                        </page>


                    </notebook>
                </sheet>
                <chatter />

            </form>
        </field>
    </record>


    <record id="view_national_id_tree" model="ir.ui.view">
        <field name="name">national.id.application.tree</field>
        <field name="model">national.id.application</field>
        <field name="arch" type="xml">
            <list string="National ID Applications"
                decoration-muted="state == 'draft'"
                decoration-info="state == 'verified'"
                decoration-warning="state == 'senior_approved'"
                decoration-success="state == 'final_approved'"
                decoration-danger="state == 'rejected'">
                <field name="tracking_number" />
                <field name="application_date" />
                <field name="name" />
                <field name="email" />
                <field
                    name="state"
                    widget="badge"
                    decoration-muted="state == 'draft'"
                    decoration-info="state == 'verified'"
                    decoration-warning="state == 'senior_approved'"
                    decoration-success="state == 'final_approved'"
                    decoration-danger="state == 'rejected'"
                />
            </list>
        </field>
    </record>

    <record id="action_national_id_application" model="ir.actions.act_window">
        <field name="name">National ID Applications</field>
        <field name="res_model">national.id.application</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_nid_root" name="National ID" sequence="10" />

    <menuitem id="menu_nid_applications"
        name="Applications"
        parent="menu_nid_root"
        action="action_national_id_application"
        sequence="10" />

</odoo>