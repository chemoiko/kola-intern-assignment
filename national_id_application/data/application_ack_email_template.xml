<odoo>
    <data>
        <record id="national_ack_email_template" model="mail.template">
            <field name="name">National ID Application Acknowledgment</field>
            <field name="model_id" ref="national_id_application.model_national_id_application" />
            <field name="email_from">thistime262@gmail.com</field>
            <field name="email_to">{{object.email or ''}}</field>
            <field name="subject">Your National ID Application - Tracking: {{(object.tracking_number or '').replace('\n', ' ').replace('\r', ' ')}}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Dear <t t-out="object.name" /></p>
                    <p>Thank you for your National ID application. Your tracking number is: <strong>
                            <t t-out="object.tracking_number" />
                        </strong>.</p>
                    <p>We will process your application shortly. You will receive further updates
                        via
                        email.</p>
                    <p>Sincerely,</p>
                    <p>The National ID Team</p>
                </div>
            </field>
        </record>
    </data>
</odoo>